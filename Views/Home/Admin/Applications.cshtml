@section Scripts {
    <script>
        function exportAllApplications() {
            // Set current status filter in export modal
            const currentStatus = document.getElementById('statusFilter').value;
            if (currentStatus) {
                document.getElementById('exportStatus').value = currentStatus;
            }

            // Show export modal
            const modal = new bootstrap.Modal(document.getElementById('exportModal'));
            modal.show();
        }

        function exportSingleApplication(applicationId) {
            // Download single application
            const url = `/api/application/${applicationId}/export`;
            window.open(url, '_blank');

            // Show toast notification
            showToast('Download started...', 'info');
        }

        function processExport() {
            const format = document.getElementById('exportFormat').value;
            const status = document.getElementById('exportStatus').value;
            const startDate = document.getElementById('exportStartDate').value;
            const endDate = document.getElementById('exportEndDate').value;

            // Build query parameters
            const params = new URLSearchParams();
            if (status) params.append('status', status);
            if (startDate) params.append('startDate', startDate);
            if (endDate) params.append('endDate', endDate);
            params.append('format', format);

            // Create download link
            const url = `/api/application/export?${params.toString()}`;
            window.open(url, '_blank');

            // Close modal
            const modal = bootstrap.Modal.getInstance(document.getElementById('exportModal'));
            modal.hide();

            // Show toast
            showToast('Export started. Download will begin shortly.', 'success');
        }

        function showToast(message, type) {
            // Create toast element
            const toast = document.createElement('div');
            toast.className = `toast align-items-center text-white bg-${type} border-0 position-fixed bottom-0 end-0 m-3`;
            toast.style.zIndex = '1060';
            toast.innerHTML = `
                                    <div class="d-flex">
                                        <div class="toast-body">
                                            ${message}
                                        </div>
                                        <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
                                    </div>
                                `;

            document.body.appendChild(toast);
            const bsToast = new bootstrap.Toast(toast);
            bsToast.show();

            // Remove toast after 3 seconds
            setTimeout(() => {
                if (toast.parentNode) {
                    toast.parentNode.removeChild(toast);
                }
            }, 3000);
        }

        // Handle row click to view details
        document.addEventListener('DOMContentLoaded', function () {
            const tableRows = document.querySelectorAll('tbody tr');
            tableRows.forEach(row => {
                // Skip rows that have no data
                if (row.cells.length > 1) {
                    row.style.cursor = 'pointer';
                    row.addEventListener('click', function (e) {
                        // Don't navigate if clicking on action buttons
                        if (!e.target.closest('.btn-group') && !e.target.closest('button') && !e.target.closest('a')) {
                            const viewBtn = this.querySelector('a.btn-outline-primary');
                            if (viewBtn) {
                                window.location.href = viewBtn.href;
                            }
                        }
                    });
                }
            });
        });
    </script>
}

@functions {
    // Helper function to generate page URLs with current filters
    public string GetPageUrl(int page)
    {
        var queryParams = new Dictionary<string, string>();

        if (!string.IsNullOrEmpty(Model.StatusFilter))
            queryParams["status"] = Model.StatusFilter;

        if (!string.IsNullOrEmpty(Model.Search))
            queryParams["search"] = Model.Search;

        queryParams["page"] = page.ToString();

        var queryString = string.Join("&", queryParams.Select(kvp => $"{kvp.Key}={Uri.EscapeDataString(kvp.Value)}"));
        return $"/Applications?{queryString}";
    }
}