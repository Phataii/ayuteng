@model ayuteng.Controllers.HomeController.ApplicationsPageViewModel
@{
    ViewData["Title"] = "Applications List";
    Layout = "_AdminLayout";
}

<div class="container-fluid">
    <!-- Page Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-0" style="color: var(--primary-blue);">
                <i class="bi bi-list-check me-2"></i>Applications List
            </h1>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/Admin/Dashboard">Dashboard</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Applications</li>
                </ol>
            </nav>
        </div>
        <div>
            <button class="btn btn-primary" onclick="exportAllApplications()">
                <i class="bi bi-download me-2"></i>Export All
            </button>
        </div>
    </div>

    <!-- Filter Bar -->
    <div class="card mb-4">
        <div class="card-body">
            <form method="get" action="/Applications" id="filterForm">
                <div class="row g-3">
                    <div class="col-md-4">
                        <label class="form-label" style="color: var(--primary-blue);">Status</label>
                        <select class="form-select" name="status" id="statusFilter">
                            <option value="">All Status</option>
                            <option value="draft" selected="@(Model.StatusFilter == "draft")">Draft</option>
                            <option value="submitted" selected="@(Model.StatusFilter == "submitted")">Submitted</option>
                            <option value="reviewing" selected="@(Model.StatusFilter == "reviewing")">Under Review
                            </option>
                            <option value="approved" selected="@(Model.StatusFilter == "approved")">Approved</option>
                            <option value="rejected" selected="@(Model.StatusFilter == "rejected")">Rejected</option>
                        </select>
                    </div>
                    <div class="col-md-5">
                        <label class="form-label" style="color: var(--primary-blue);">Search</label>
                        <div class="input-group">
                            <input type="text" class="form-control" name="search"
                                placeholder="Search by name, email, startup, reference..." value="@Model.Search">
                            <button class="btn btn-outline-primary" type="submit">
                                <i class="bi bi-search"></i>
                            </button>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <label class="form-label" style="color: var(--primary-blue);">&nbsp;</label>
                        <div class="d-flex gap-2">
                            <button class="btn btn-primary flex-grow-1" type="submit">
                                <i class="bi bi-filter me-2"></i>Apply Filters
                            </button>
                            <a href="/Applications" class="btn btn-outline-secondary">
                                <i class="bi bi-x-lg"></i>
                            </a>
                        </div>
                    </div>
                </div>
                <input type="hidden" name="page" id="pageInput" value="@Model.CurrentPage" />
            </form>
        </div>
    </div>

    <!-- Applications Table -->
    <div class="card">
        <div class="card-header" style="background-color: var(--light-green);">
            <div class="d-flex justify-content-between align-items-center">
                <h5 class="mb-0" style="color: var(--primary-blue);">
                    <i class="bi bi-file-earmark-text me-2"></i>Applications
                    <span class="badge bg-primary ms-2">@Model.TotalApplications Found</span>
                </h5>
                <div>
                    <span class="text-muted me-3">
                        Showing @((Model.CurrentPage - 1) * Model.PageSize + 1) -
                        @Math.Min(Model.CurrentPage * Model.PageSize, Model.TotalApplications) of
                        @Model.TotalApplications
                    </span>
                </div>
            </div>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead>
                        <tr>
                            <th style="width: 80px;">Ref #</th>
                            <th>Founder</th>
                            <th>Startup</th>
                            <th>Email</th>
                            <th>Status</th>
                            <th>Applied Date</th>
                            <th style="width: 120px;" class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Applications.Any())
                        {
                            foreach (var app in Model.Applications)
                            {
                                <tr>
                                    <td>
                                        <span class="badge bg-secondary">@app.ReferenceNumber</span>
                                    </td>
                                    <td>
                                        <div class="fw-semibold">@app.FirstName @app.LastName</div>
                                        <small class="text-muted">@app.Phone</small>
                                    </td>
                                    <td>@app.StartupName</td>
                                    <td>@app.Email</td>
                                    <td>
                                        @{
                                            var statusClass = app.Status switch
                                            {
                                                "draft" => "bg-secondary",
                                                "submitted" => "bg-info",
                                                "reviewing" => "bg-warning",
                                                "approved" => "bg-success",
                                                "rejected" => "bg-danger",
                                                _ => "bg-secondary"
                                            };
                                        }
                                        <span class="badge @statusClass">@app.Status.ToUpper()</span>
                                    </td>
                                    <td>
                                        <div>@app.CreatedAt.ToLocalTime().ToString("MMM dd, yyyy")</div>
                                        <small class="text-muted">@app.CreatedAt.ToLocalTime().ToString("hh:mm tt")</small>
                                    </td>
                                    <td class="text-center">
                                        <div class="btn-group" role="group">
                                            <a href="/applications/details/@app.Id" class="btn btn-sm btn-outline-primary">
                                                <i class="bi bi-eye"></i> View
                                            </a>
                                            <button type="button" class="btn btn-sm btn-outline-secondary"
                                                onclick="exportSingleApplication('@app.Id')">
                                                <i class="bi bi-download"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="7" class="text-center py-5 text-muted">
                                    <i class="bi bi-inbox me-2"></i>
                                    No applications found matching your criteria.
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Pagination -->
        @if (Model.TotalPages > 1)
        {
            <div class="card-footer">
                <nav aria-label="Page navigation">
                    <ul class="pagination justify-content-center mb-0">
                        <!-- Previous Page -->
                        @if (Model.CurrentPage > 1)
                        {
                            <li class="page-item">
                                <a class="page-link" href="@GetPageUrl(Model.CurrentPage - 1)">
                                    <i class="bi bi-chevron-left"></i>
                                </a>
                            </li>
                        }
                        else
                        {
                            <li class="page-item disabled">
                                <span class="page-link">
                                    <i class="bi bi-chevron-left"></i>
                                </span>
                            </li>
                        }

                        <!-- Page Numbers -->
                        @{
                            int startPage = Math.Max(1, Model.CurrentPage - 2);
                            int endPage = Math.Min(Model.TotalPages, Model.CurrentPage + 2);

                            if (startPage > 1)
                            {
                                <li class="page-item">
                                    <a class="page-link" href="@GetPageUrl(1)">1</a>
                                </li>
                                @if (startPage > 2)
                                {
                                    <li class="page-item disabled">
                                        <span class="page-link">...</span>
                                    </li>
                                }
                            }

                            for (int i = startPage; i <= endPage; i++)
                            {
                                <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                                    <a class="page-link" href="@GetPageUrl(i)">@i</a>
                                </li>
                            }

                            if (endPage < Model.TotalPages)
                            {
                                @if (endPage < Model.TotalPages - 1)
                                {
                                    <li class="page-item disabled">
                                        <span class="page-link">...</span>
                                    </li>
                                }
                                <li class="page-item">
                                    <a class="page-link" href="@GetPageUrl(Model.TotalPages)">@Model.TotalPages</a>
                                </li>
                            }
                        }

                        <!-- Next Page -->
                        @if (Model.CurrentPage < Model.TotalPages)
                        {
                            <li class="page-item">
                                <a class="page-link" href="@GetPageUrl(Model.CurrentPage + 1)">
                                    <i class="bi bi-chevron-right"></i>
                                </a>
                            </li>
                        }
                        else
                        {
                            <li class="page-item disabled">
                                <span class="page-link">
                                    <i class="bi bi-chevron-right"></i>
                                </span>
                            </li>
                        }
                    </ul>
                </nav>
            </div>
        }
    </div>
</div>

<!-- Export Modal -->
<div class="modal fade" id="exportModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header" style="background-color: var(--light-green);">
                <h5 class="modal-title" style="color: var(--primary-blue);">
                    <i class="bi bi-download me-2"></i>Export Applications
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="mb-3">
                    <label class="form-label" style="color: var(--primary-blue);">Format</label>
                    <select class="form-select" id="exportFormat">
                        <option value="csv">CSV (Excel)</option>
                        <option value="excel">Excel (XLSX)</option>
                        <option value="pdf">PDF Document</option>
                        <option value="json">JSON Data</option>
                    </select>
                </div>
                <div class="mb-3">
                    <label class="form-label" style="color: var(--primary-blue);">Filter by Status</label>
                    <select class="form-select" id="exportStatus">
                        <option value="">All Applications</option>
                        <option value="draft">Draft Only</option>
                        <option value="submitted">Submitted Only</option>
                        <option value="reviewing">Under Review Only</option>
                        <option value="approved">Approved Only</option>
                        <option value="rejected">Rejected Only</option>
                    </select>
                </div>
                <div class="mb-3">
                    <label class="form-label" style="color: var(--primary-blue);">Date Range</label>
                    <div class="row g-2">
                        <div class="col-md-6">
                            <input type="date" class="form-control" id="exportStartDate"
                                value="@DateTime.Now.AddDays(-30).ToString("yyyy-MM-dd")">
                        </div>
                        <div class="col-md-6">
                            <input type="date" class="form-control" id="exportEndDate"
                                value="@DateTime.Now.ToString("yyyy-MM-dd")">
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" onclick="processExport()">
                    <i class="bi bi-download me-2"></i>Export
                </button>
            </div>
        </div>
    </div>
</div>

