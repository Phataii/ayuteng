@section Scripts {
    <script>
        function updateStatus(newStatus) {
            if (confirm(`Are you sure you want to mark this application as ${newStatus}?`)) {
                updateStatusWithApi(newStatus, '');
            }
        }

        function updateStatusWithNotes() {
            const newStatus = document.getElementById('newStatus').value;
            const notes = document.getElementById('statusNotes').value;

            if (confirm(`Update application status to ${newStatus}?`)) {
                updateStatusWithApi(newStatus, notes);
            }
        }

        async function updateStatusWithApi(newStatus, notes) {
            try {
                const response = await fetch(`/api/applications/@Model.Id/status`, {
                    method: 'PUT',
                    headers: {
                        'Content-Type': 'application/json',
                        'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                    },
                    body: JSON.stringify({
                        status: newStatus,
                        notes: notes
                    })
                });

                if (response.ok) {
                    showToast('Status updated successfully', 'success');
                    setTimeout(() => {
                        window.location.reload();
                    }, 1500);
                } else {
                    throw new Error('Failed to update status');
                }
            } catch (error) {
                console.error('Error updating status:', error);
                showToast('Failed to update status', 'danger');
            }
        }

        function downloadApplication() {
            window.open(`/api/application/@Model.Id/download`, '_blank');
            showToast('Download started...', 'info');
        }

        function sendEmail() {
            const subject = encodeURIComponent(`Regarding your application: ${Model.ReferenceNumber}`);
            const body = encodeURIComponent(`Dear ${Model.FirstName},\n\n`);
            window.location.href = `mailto:${Model.Email}?subject=${subject}&body=${body}`;
        }

        function addNote() {
            const note = prompt('Enter internal note:');
            if (note) {
                showToast('Note added successfully', 'success');
                // In a real app, you would save this to the database
                console.log('Note added:', note);
            }
        }

        function deleteApplication() {
            if (confirm('Are you sure you want to delete this application? This action cannot be undone.')) {
                // In a real app, you would call delete API
                showToast('Application deleted (demo only)', 'warning');
            }
        }

        function showToast(message, type) {
            const toast = document.createElement('div');
            toast.className = `toast align-items-center text-white bg-${type} border-0 position-fixed bottom-0 end-0 m-3`;
            toast.style.zIndex = '1060';
            toast.innerHTML = `
                                                <div class="d-flex">
                                                    <div class="toast-body">
                                                        ${message}
                                                    </div>
                                                    <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
                                                </div>
                                            `;

            document.body.appendChild(toast);
            const bsToast = new bootstrap.Toast(toast);
            bsToast.show();

            setTimeout(() => {
                if (toast.parentNode) {
                    toast.parentNode.removeChild(toast);
                }
            }, 3000);
        }

        // Initialize tooltips
        document.addEventListener('DOMContentLoaded', function () {
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
            var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl);
            });
        });
    </script>
}