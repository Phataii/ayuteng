@model List<ayuteng.Models.Admin>

@{
    ViewData["Title"] = "Admin Management";
    Layout = "_AdminLayout";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AYuTe Portal</title>
    <style>
        :root {
            --primary-green: #39B34A;
            --primary-yellow: #DEE33B;
            --primary-blue: #073150;
            --light-green: #E9F7EC;
            --light-yellow: #FDFDE8;
            --light-blue: #F0F7FB;
            --white: #FFFFFF;
            --gray: #5D6D7E;
            --light-gray: #F5F5F5;
            --border-color: #e0e0e0;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, sans-serif;
            background: var(--light-gray);
            color: var(--primary-blue);
            min-height: 100vh;
        }

        .admin-container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
        }

        /* Header Styles */
        .header {
            background: var(--white);
            padding: 20px;
            border-radius: 12px;
            box-shadow: 0 4px 12px rgba(7, 49, 80, 0.1);
            margin-bottom: 30px;
            border: 1px solid var(--border-color);
        }

        .header-content {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .logo h1 {
            color: var(--primary-blue);
            font-size: 24px;
            font-weight: 700;
            margin-bottom: 5px;
        }

        .logo p {
            color: var(--gray);
            font-size: 14px;
        }

        .header-actions {
            display: flex;
            gap: 15px;
        }

        .btn {
            padding: 10px 20px;
            border-radius: 6px;
            font-weight: 600;
            cursor: pointer;
            border: none;
            transition: all 0.3s ease;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 8px;
            font-size: 14px;
        }

        .btn-primary {
            background: var(--primary-green);
            color: var(--white);
        }

        .btn-primary:hover {
            background: #2e8b3e;
            transform: translateY(-2px);
            box-shadow: 0 4px 12px rgba(57, 179, 74, 0.2);
        }

        .btn-secondary {
            background: var(--light-blue);
            color: var(--primary-blue);
            border: 1px solid var(--border-color);
        }

        .btn-secondary:hover {
            background: var(--light-green);
            border-color: var(--primary-green);
        }

        /* Main Content */
        .main-content {
            background: var(--white);
            border-radius: 12px;
            box-shadow: 0 4px 12px rgba(7, 49, 80, 0.1);
            padding: 30px;
            border: 1px solid var(--border-color);
        }

        .page-title {
            font-size: 22px;
            font-weight: 700;
            margin-bottom: 5px;
            color: var(--primary-blue);
        }

        .page-subtitle {
            color: var(--gray);
            font-size: 14px;
            margin-bottom: 25px;
        }

        /* Stats Cards */
        .stats-container {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 20px;
            margin-bottom: 30px;
        }

        .stat-card {
            background: var(--light-blue);
            padding: 20px;
            border-radius: 10px;
            border-left: 4px solid var(--primary-green);
        }

        .stat-value {
            font-size: 32px;
            font-weight: 700;
            color: var(--primary-blue);
            margin-bottom: 5px;
        }

        .stat-label {
            color: var(--gray);
            font-size: 14px;
            font-weight: 500;
        }

        /* Table Styles */
        .table-container {
            overflow-x: auto;
            border-radius: 10px;
            border: 1px solid var(--border-color);
        }

        .admins-table {
            width: 100%;
            border-collapse: collapse;
            min-width: 800px;
        }

        .admins-table thead {
            background: var(--light-blue);
        }

        .admins-table th {
            padding: 16px;
            text-align: left;
            font-weight: 600;
            color: var(--primary-blue);
            border-bottom: 2px solid var(--border-color);
            font-size: 14px;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .admins-table tbody tr {
            border-bottom: 1px solid var(--border-color);
            transition: background 0.2s ease;
        }

        .admins-table tbody tr:hover {
            background: var(--light-gray);
        }

        .admins-table td {
            padding: 16px;
            color: var(--primary-blue);
            font-size: 14px;
        }

        /* Status Badge */
        .status-badge {
            padding: 6px 12px;
            border-radius: 20px;
            font-size: 12px;
            font-weight: 600;
            display: inline-block;
        }

        .status-active {
            background: var(--light-green);
            color: var(--primary-green);
        }

        .status-inactive {
            background: #fee;
            color: #d32f2f;
        }

        /* Role Badge */
        .role-badge {
            padding: 6px 12px;
            border-radius: 20px;
            font-size: 12px;
            font-weight: 600;
            display: inline-block;
        }

        .role-super {
            background: #e3f2fd;
            color: #1976d2;
        }

        .role-portal {
            background: #f3e5f5;
            color: #7b1fa2;
        }

        /* Action Buttons */
        .action-buttons {
            display: flex;
            gap: 8px;
        }

        .btn-icon {
            width: 36px;
            height: 36px;
            border-radius: 6px;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            border: none;
            transition: all 0.2s ease;
            font-size: 14px;
        }

        .btn-edit {
            background: var(--light-blue);
            color: var(--primary-blue);
        }

        .btn-edit:hover {
            background: var(--primary-blue);
            color: var(--white);
        }

        .btn-delete {
            background: #ffebee;
            color: #d32f2f;
        }

        .btn-delete:hover {
            background: #d32f2f;
            color: var(--white);
        }

        /* Empty State */
        .empty-state {
            text-align: center;
            padding: 60px 20px;
            color: var(--gray);
        }

        .empty-icon {
            font-size: 48px;
            margin-bottom: 20px;
            opacity: 0.5;
        }

        .empty-message {
            font-size: 16px;
            margin-bottom: 20px;
        }

        /* Responsive */
        @@media (max-width: 768px) {
            .admin-container {
                padding: 15px;
            }

            .header-content {
                flex-direction: column;
                gap: 20px;
                text-align: center;
            }

            .header-actions {
                flex-direction: column;
                width: 100%;
            }

            .btn {
                width: 100%;
                justify-content: center;
            }

            .main-content {
                padding: 20px;
            }

            .stats-container {
                grid-template-columns: 1fr;
            }

            .admins-table th,
            .admins-table td {
                padding: 12px 8px;
            }
        }

        /* Loading State */
        .loading {
            text-align: center;
            padding: 40px;
            color: var(--gray);
        }

        .loading-spinner {
            display: inline-block;
            width: 40px;
            height: 40px;
            border: 3px solid var(--light-gray);
            border-top-color: var(--primary-green);
            border-radius: 50%;
            animation: spin 1s linear infinite;
            margin-bottom: 15px;
        }

        @@keyframes spin {
            to {
                transform: rotate(360deg);
            }
        }

        /* Footer */
        .footer {
            text-align: center;
            margin-top: 40px;
            padding-top: 20px;
            border-top: 1px solid var(--border-color);
            color: var(--gray);
            font-size: 12px;
        }
    </style>
</head>

<body>
    <div class="admin-container">
        <!-- Header -->
        <div class="header">
            <div class="header-content">
                <div class="logo">
                    <h1>AYuTe Portal</h1>
                    <p>Admin Management</p>
                </div>
                <div class="header-actions">
                    <a href="/admin/add" class="btn btn-primary">
                        <span>+</span> Add New Admin
                    </a>
                    <a href="/dashboard" class="btn btn-secondary">
                        ‚Üê Back to Dashboard
                    </a>
                </div>
            </div>
        </div>

        <!-- Main Content -->
        <div class="main-content">
            <h2 class="page-title">Administrators</h2>
            <p class="page-subtitle">Manage admin users and their permissions</p>

            <!-- Stats -->
            <div class="stats-container">
                <div class="stat-card">
                    <div class="stat-value">@Model.Count</div>
                    <div class="stat-label">Total Admins</div>
                </div>
                <div class="stat-card">
                    <div class="stat-value">@Model.Count(a => a.IsActive)</div>
                    <div class="stat-label">Active Admins</div>
                </div>
                <div class="stat-card">
                    <div class="stat-value">@Model.Count(a => a.Role == 1)</div>
                    <div class="stat-label">Super Admins</div>
                </div>
                <div class="stat-card">
                    <div class="stat-value">@Model.Count(a => a.Role == 2)</div>
                    <div class="stat-label">Portal Admins</div>
                </div>
            </div>

            <!-- Admins Table -->
            <div class="table-container">
                @if (Model.Any())
                {
                    <table class="admins-table">
                        <thead>
                            <tr>
                                <th>Email</th>
                                <th>Status</th>
                                <th>Role</th>
                                <th>Created At</th>
                                <th>Last Updated</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var admin in Model)
                            {
                                <tr>
                                    <td>
                                        <strong>@admin.Email</strong>
                                        @if (admin.Id == Guid.Parse("00000000-0000-0000-0000-000000000001"))
                                        {
                                            <span style="color: var(--primary-green); margin-left: 8px;">üëë</span>
                                        }
                                    </td>
                                    <td>
                                        <span class="status-badge @(admin.IsActive ? "status-active" : "status-inactive")">
                                            @(admin.IsActive ? "Active" : "Inactive")
                                        </span>
                                    </td>
                                    <td>
                                        <span class="role-badge @(admin.Role == 1 ? "role-super" : "role-portal")">
                                            @(admin.Role == 1 ? "Super Admin" : "Portal Admin")
                                        </span>
                                    </td>
                                    <td>@admin.CreatedAt.ToString("MMM dd, yyyy")</td>
                                    <td>@admin.UpdatedAt.ToString("MMM dd, yyyy")</td>
                                    <td>
                                        <div class="action-buttons">
                                            <button class="btn-icon btn-edit" onclick="editAdmin('@admin.Id')" title="Edit">
                                                ‚úèÔ∏è
                                            </button>
                                            @if (admin.Id != Guid.Parse("00000000-0000-0000-0000-000000000001"))
                                            {
                                                <button class="btn-icon btn-delete"
                                                    onclick="deleteAdmin('@admin.Id', '@admin.Email')" title="Delete">
                                                    üóëÔ∏è
                                                </button>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <div class="empty-state">
                        <div class="empty-icon">üë•</div>
                        <div class="empty-message">No administrators found</div>
                        <a href="/admin/add" class="btn btn-primary" style="width: auto;">
                            <span>+</span> Add Your First Admin
                        </a>
                    </div>
                }
            </div>
        </div>

        <!-- Footer -->
        <div class="footer">
            ¬© @DateTime.Now.Year AYuTe Portal. All rights reserved. |
            Showing @Model.Count administrator@(Model.Count != 1 ? "s" : "")
        </div>
    </div>

    <script>
        // Edit Admin
        function editAdmin(id) {
            window.location.href = `/admin/edit/${id}`;
        }

        // Delete Admin
        function deleteAdmin(id, email) {
            if (confirm(`Are you sure you want to delete admin "${email}"?\n\nThis action cannot be undone.`)) {
                // Show loading
                document.body.style.opacity = '0.7';
                document.body.style.cursor = 'wait';

                fetch(`/api/admin/${id}`, {
                    method: 'DELETE',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                })
                    .then(response => {
                        if (response.ok) {
                            alert('Admin deleted successfully');
                            window.location.reload();
                        } else {
                            throw new Error('Delete failed');
                        }
                    })
                    .catch(error => {
                        console.error('Error:', error);
                        alert('Failed to delete admin. Please try again.');
                    })
                    .finally(() => {
                        document.body.style.opacity = '1';
                        document.body.style.cursor = 'default';
                    });
            }
        }

        // Get CSRF Token


        // Search functionality (optional)
        document.addEventListener('DOMContentLoaded', function () {
            // You can add search functionality here
            const searchInput = document.createElement('input');
            searchInput.type = 'search';
            searchInput.placeholder = 'Search admins...';
            searchInput.style.cssText = `
                padding: 10px 15px;
                border: 1px solid var(--border-color);
                border-radius: 6px;
                width: 100%;
                max-width: 300px;
                margin-bottom: 20px;
            `;

            searchInput.addEventListener('input', function (e) {
                const searchTerm = e.target.value.toLowerCase();
                const rows = document.querySelectorAll('.admins-table tbody tr');

                rows.forEach(row => {
                    const email = row.cells[0].textContent.toLowerCase();
                    const role = row.cells[2].textContent.toLowerCase();
                    const status = row.cells[1].textContent.toLowerCase();

                    if (email.includes(searchTerm) || role.includes(searchTerm) || status.includes(searchTerm)) {
                        row.style.display = '';
                    } else {
                        row.style.display = 'none';
                    }
                });
            });

            // Add search input before the table
            const tableContainer = document.querySelector('.table-container');
            if (tableContainer && document.querySelector('.admins-table')) {
                tableContainer.insertBefore(searchInput, tableContainer.firstChild);
            }

            // Auto-refresh every 30 seconds (optional)
            setInterval(() => {
                console.log('Auto-refreshing admin list...');
                // window.location.reload(); // Uncomment to enable auto-refresh
            }, 30000);
        });

        // Export functionality (optional)
        function exportToCSV() {
            const rows = Array.from(document.querySelectorAll('.admins-table tr'));
            const csvContent = rows.map(row =>
                Array.from(row.cells).map(cell =>
                    `"${cell.textContent.replace(/"/g, '""')}"`
                ).join(',')
            ).join('\n');

            const blob = new Blob([csvContent], { type: 'text/csv;charset=utf-8;' });
            const link = document.createElement('a');
            link.href = URL.createObjectURL(blob);
            link.download = `admins_${new Date().toISOString().split('T')[0]}.csv`;
            link.click();
        }
    </script>
</body>

</html>