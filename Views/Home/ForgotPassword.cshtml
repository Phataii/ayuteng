@{
    ViewData["Title"] = "Forgot Password";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin Panel</title>
    <style>
        :root {
            --primary-green: #39B34A;
            --primary-yellow: #DEE33B;
            --primary-blue: #073150;
            --light-green: #E9F7EC;
            --light-yellow: #FDFDE8;
            --light-blue: #F0F7FB;
            --white: #FFFFFF;
            --gray: #5D6D7E;
            --light-gray: #F5F5F5;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, sans-serif;
            background: linear-gradient(135deg, var(--primary-blue) 0%, #0c4168 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
        }

        .forgot-container {
            width: 100%;
            max-width: 400px;
        }

        .forgot-card {
            background: var(--white);
            border-radius: 12px;
            padding: 40px;
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
            text-align: center;
            border: 1px solid var(--light-green);
        }

        .logo {
            margin-bottom: 30px;
        }

        .logo h1 {
            color: var(--primary-blue);
            font-size: 24px;
            font-weight: 700;
            margin-bottom: 5px;
        }

        .logo p {
            color: var(--gray);
            font-size: 14px;
        }

        .form-group {
            margin-bottom: 20px;
            text-align: left;
        }

        .form-label {
            display: block;
            margin-bottom: 6px;
            color: var(--primary-blue);
            font-size: 14px;
            font-weight: 500;
        }

        .form-control {
            width: 100%;
            padding: 12px 16px;
            border: 2px solid var(--light-green);
            border-radius: 8px;
            font-size: 16px;
            transition: all 0.3s ease;
            background: var(--light-gray);
            color: var(--primary-blue);
        }

        .form-control:focus {
            outline: none;
            border-color: var(--primary-green);
            background: var(--light-green);
            box-shadow: 0 0 0 3px rgba(57, 179, 74, 0.1);
        }

        .btn-submit {
            width: 100%;
            padding: 14px;
            background: linear-gradient(135deg, var(--primary-green) 0%, #2e8b3e 100%);
            color: var(--white);
            border: none;
            border-radius: 8px;
            font-size: 16px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            letter-spacing: 0.5px;
        }

        .btn-submit:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 20px rgba(57, 179, 74, 0.3);
        }

        .btn-submit:active {
            transform: translateY(0);
        }

        .btn-submit.loading {
            position: relative;
            color: transparent;
        }

        .btn-submit.loading::after {
            content: '';
            position: absolute;
            width: 20px;
            height: 20px;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            border: 2px solid rgba(255, 255, 255, 0.3);
            border-radius: 50%;
            border-top-color: var(--white);
            animation: spin 1s linear infinite;
        }

        .message {
            padding: 12px;
            border-radius: 6px;
            margin-bottom: 20px;
            font-size: 14px;
            text-align: left;
            display: none;
        }

        .message.success {
            background-color: var(--light-green);
            color: #0f5132;
            border-left: 4px solid var(--primary-green);
        }

        .message.error {
            background-color: #f8d7da;
            color: #842029;
            border-left: 4px solid #dc3545;
        }

        .back-to-login {
            text-align: center;
            margin-top: 20px;
        }

        .back-to-login a {
            color: var(--primary-green);
            text-decoration: none;
            font-size: 14px;
        }

        .back-to-login a:hover {
            text-decoration: underline;
        }

        .copyright {
            text-align: center;
            margin-top: 30px;
            color: rgba(255, 255, 255, 0.9);
            font-size: 12px;
        }

        @@keyframes spin {
            to {
                transform: translate(-50%, -50%) rotate(360deg);
            }
        }

        @@media (max-width: 480px) {
            .forgot-card {
                padding: 30px 20px;
            }

            body {
                padding: 10px;
            }
        }
    </style>
</head>

<body>
    <div class="forgot-container">
        <div class="forgot-card">
            <div class="logo">
                <h1>Reset Password</h1>
                <p>Enter your email to receive reset instructions</p>
            </div>

            <div id="message" class="message"></div>

            <form id="" method="POST" action="/api/application/forgot-password">
                <div class="form-group">
                    <label class="form-label" for="email">Email Address</label>
                    <input type="email" name="email" id="email" class="form-control" placeholder="email@example.com"
                        required>
                </div>

                <button type="submit" class="btn-submit">
                    Send Reset Link
                </button>
            </form>

            <div class="back-to-login">
                <a href="login">← Back to Login</a>
            </div>
        </div>

        <div class="copyright">
            © @DateTime.Now.Year Ayute. All rights reserved.
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const form = document.getElementById('forgotForm');
            const submitBtn = document.getElementById('submitBtn');
            const messageDiv = document.getElementById('message');

            form.addEventListener('submit', async function (e) {
                e.preventDefault();

                const email = document.getElementById('email').value.trim();

                if (!email) {
                    showMessage('Please enter your email address', 'error');
                    return;
                }

                @* if (!isValidEmail(email)) {
                    showMessage('Please enter a valid email address', 'error');
                    return;
                } *@

                    // Show loading state
                    submitBtn.classList.add('loading');
                submitBtn.disabled = true;


            });

            // Email validation
            @* function isValidEmail(email) {
                const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
                return emailRegex.test(email);
            } *@

                function showMessage(text, type) {
                    messageDiv.textContent = text;
                    messageDiv.className = `message ${type}`;
                    messageDiv.style.display = 'block';

                    // Auto-hide success message after 10 seconds
                    if (type === 'success') {
                        setTimeout(() => {
                            messageDiv.style.display = 'none';
                        }, 10000);
                    }
                }

            // Focus email field on load
            document.getElementById('email').focus();
        });
    </script>
</body>

</html>