@model EmailVerificationSentViewModel

@{
    ViewData["Title"] = "Check Your Email";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AYuTe Portal</title>
    <style>
        :root {
            --primary-green: #39B34A;
            --primary-yellow: #DEE33B;
            --primary-blue: #073150;
            --light-green: #E9F7EC;
            --light-yellow: #FDFDE8;
            --light-blue: #F0F7FB;
            --white: #FFFFFF;
            --gray: #5D6D7E;
            --light-gray: #F5F5F5;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, sans-serif;
            background: linear-gradient(135deg, var(--primary-blue) 0%, #1a4b6d 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 20px;
        }

        .verification-container {
            width: 100%;
            max-width: 500px;
        }

        .verification-card {
            background: var(--white);
            border-radius: 12px;
            padding: 40px;
            box-shadow: 0 20px 60px rgba(7, 49, 80, 0.3);
            text-align: center;
            border: 1px solid var(--light-green);
        }

        .logo {
            margin-bottom: 20px;
        }

        .logo h1 {
            color: var(--primary-blue);
            font-size: 24px;
            font-weight: 700;
            margin-bottom: 5px;
        }

        .logo p {
            color: var(--gray);
            font-size: 14px;
        }

        .icon-container {
            margin: 30px 0;
        }

        .icon {
            width: 100px;
            height: 100px;
            background: var(--light-green);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin: 0 auto;
            font-size: 48px;
            color: var(--primary-green);
            animation: pulse 2s infinite;
        }

        .title {
            color: var(--primary-blue);
            font-size: 28px;
            font-weight: 700;
            margin-bottom: 15px;
            line-height: 1.3;
        }

        .subtitle {
            color: var(--gray);
            font-size: 16px;
            margin-bottom: 20px;
            line-height: 1.6;
        }

        .email-display {
            background: var(--light-blue);
            padding: 15px 25px;
            border-radius: 10px;
            margin: 25px 0;
            border: 1px solid var(--light-green);
            text-align: center;
        }

        .email-display strong {
            color: var(--primary-blue);
            font-weight: 600;
            font-size: 16px;
            word-break: break-all;
        }

        .instructions {
            background: var(--light-yellow);
            padding: 20px;
            border-radius: 10px;
            margin: 25px 0;
            border-left: 4px solid var(--primary-yellow);
            text-align: left;
        }

        .instructions h3 {
            color: var(--primary-blue);
            margin-bottom: 10px;
            font-size: 16px;
            display: flex;
            align-items: center;
            gap: 8px;
        }

        .instructions ul {
            list-style: none;
            padding-left: 0;
        }

        .instructions li {
            padding: 8px 0;
            color: var(--gray);
            display: flex;
            align-items: flex-start;
            gap: 10px;
            font-size: 14px;
        }

        .instructions li:before {
            content: "‚úì";
            color: var(--primary-green);
            font-weight: bold;
            flex-shrink: 0;
        }

        .actions {
            margin-top: 30px;
            display: flex;
            flex-direction: column;
            gap: 15px;
        }

        .btn-primary {
            padding: 16px;
            background: linear-gradient(135deg, var(--primary-green) 0%, #2e8b3e 100%);
            color: var(--white);
            border: none;
            border-radius: 8px;
            font-size: 16px;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            letter-spacing: 0.5px;
            text-decoration: none;
            display: inline-block;
        }

        .btn-primary:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 20px rgba(57, 179, 74, 0.3);
            background: linear-gradient(135deg, #2e8b3e 0%, var(--primary-green) 100%);
        }

        .btn-secondary {
            padding: 14px;
            background: var(--light-gray);
            color: var(--primary-blue);
            border: 2px solid var(--light-green);
            border-radius: 8px;
            font-size: 15px;
            font-weight: 500;
            cursor: pointer;
            transition: all 0.3s ease;
            text-decoration: none;
            display: inline-block;
        }

        .btn-secondary:hover {
            background: var(--light-green);
            border-color: var(--primary-green);
        }

        .timer {
            color: var(--gray);
            font-size: 14px;
            margin-top: 15px;
            font-style: italic;
        }

        .powered-by {
            margin-top: 40px;
            color: var(--gray);
            font-size: 12px;
            opacity: 0.8;
        }

        .copyright {
            text-align: center;
            margin-top: 30px;
            color: rgba(255, 255, 255, 0.9);
            font-size: 12px;
            letter-spacing: 0.5px;
        }

        /* Animations */
        @@keyframes pulse {
            0% {
                transform: scale(1);
            }

            50% {
                transform: scale(1.05);
            }

            100% {
                transform: scale(1);
            }
        }

        @@keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(10px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .fade-in {
            animation: fadeIn 0.5s ease-out;
        }

        /* Responsive */
        @@media (max-width: 480px) {
            .verification-card {
                padding: 30px 20px;
            }

            .icon {
                width: 80px;
                height: 80px;
                font-size: 36px;
            }

            .title {
                font-size: 24px;
            }

            .subtitle {
                font-size: 15px;
            }

            .btn-primary,
            .btn-secondary {
                padding: 14px;
            }
        }
    </style>
</head>

<body>
    <div class="verification-container">
        <div class="verification-card fade-in">
            <div class="logo">
                <h1>AYuTe Portal</h1>
                <p>Email Verification</p>
            </div>

            <div class="icon-container">
                <div class="icon">‚úâÔ∏è</div>
            </div>

            <h2 class="title">Check Your Email!</h2>

            <p class="subtitle">
                We've sent a verification link to your email address.
                Please click the link in the email to activate your account.
            </p>

            <div class="email-display">
                Email sent to: <br>
                <strong>@Model.Email</strong>
            </div>

            <div class="instructions">
                <h3>üì¨ What to do next:</h3>
                <ul>
                    <li>Open your email inbox</li>
                    <li>Look for an email from <strong>noreply@ayute.com</strong></li>
                    <li>Click the "Verify Email" button in the email</li>
                    <li>You'll be redirected back to complete your registration</li>
                </ul>
            </div>

            <div class="actions">
                <a href="https://mail.google.com" target="_blank" class="btn-primary" onclick="trackEmailOpen()">
                    üìß Open Gmail
                </a>

                <a href="https://outlook.live.com" target="_blank" class="btn-secondary">
                    üì® Open Outlook
                </a>

                <button onclick="resendVerification()" class="btn-secondary" id="resendBtn">
                    üîÑ Resend Verification Email
                </button>

                <div class="timer" id="resendTimer">
                    Can't find the email? Resend in <span id="timer">05:00</span>
                </div>
            </div>

            <div style="margin-top: 30px; padding-top: 20px; border-top: 1px solid var(--light-gray);">
                <p style="color: var(--gray); font-size: 14px; margin-bottom: 10px;">
                    Didn't receive the email?
                </p>
                <div style="font-size: 13px; color: var(--gray);">
                    <p>‚úì Check your spam or junk folder</p>
                    <p>‚úì Make sure you entered the correct email address</p>
                    <p>‚úì Wait a few minutes - emails may be delayed</p>
                </div>
            </div>

            <div class="powered-by">
                ¬© @DateTime.Now.Year Ayute. All rights reserved.
            </div>
        </div>

        <div class="copyright">
            Secure Email Verification
        </div>
    </div>

    <script>
        let resendTimer = 300; // 5 minutes in seconds
        let timerInterval = null;
        const email = '@Model.Email';

        document.addEventListener('DOMContentLoaded', function () {
            startResendTimer();
        });

        function startResendTimer() {
            const resendBtn = document.getElementById('resendBtn');
            const timerElement = document.getElementById('timer');

            resendBtn.disabled = true;
            resendBtn.style.opacity = '0.7';
            resendBtn.style.cursor = 'not-allowed';

            updateTimerDisplay();

            timerInterval = setInterval(() => {
                resendTimer--;
                updateTimerDisplay();

                if (resendTimer <= 0) {
                    stopTimer();
                    resendBtn.disabled = false;
                    resendBtn.style.opacity = '1';
                    resendBtn.style.cursor = 'pointer';
                    document.getElementById('resendTimer').innerHTML = 'Ready to resend?';
                }
            }, 1000);
        }

        function updateTimerDisplay() {
            const timerElement = document.getElementById('timer');
            const minutes = Math.floor(resendTimer / 60);
            const seconds = resendTimer % 60;
            timerElement.textContent = `${minutes.toString().padStart(2, '0')}:${seconds.toString().padStart(2, '0')}`;
        }

        function stopTimer() {
            if (timerInterval) {
                clearInterval(timerInterval);
                timerInterval = null;
            }
        }

        async function resendVerification() {
            const resendBtn = document.getElementById('resendBtn');

            if (resendBtn.disabled) return;

            // Show loading state
            const originalText = resendBtn.innerHTML;
            resendBtn.innerHTML = 'üîÑ Sending...';
            resendBtn.disabled = true;

            try {
                const response = await fetch('/api/account/resend-verification', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({
                        email: email
                    })
                });

                const result = await response.json();

                if (response.ok && result.success) {
                    // Success
                    alert('‚úÖ New verification email sent!');

                    // Reset timer
                    stopTimer();
                    resendTimer = 300;
                    startResendTimer();
                } else {
                    alert(result.message || '‚ùå Failed to resend verification email');
                }
            } catch (error) {
                console.error('Resend error:', error);
                alert('‚ùå Network error. Please try again.');
            } finally {
                // Reset button
                resendBtn.innerHTML = originalText;
            }
        }

        function trackEmailOpen() {
            // Track that user opened email client
            fetch('/api/analytics/email-client-opened', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({
                    email: email,
                    client: 'gmail',
                    timestamp: new Date().toISOString()
                })
            }).catch(console.error);
        }

        // Auto-check for verification status (optional)
        function checkVerificationStatus() {
            fetch(`/api/account/check-verification/${encodeURIComponent(email)}`)
                .then(response => response.json())
                .then(data => {
                    if (data.isVerified) {
                        window.location.href = '/account/verified-success';
                    }
                })
                .catch(console.error);
        }

        // Check every 30 seconds if email was verified
        setInterval(checkVerificationStatus, 30000);
    </script>
</body>

</html>